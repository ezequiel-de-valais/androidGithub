<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ezequieldevalais.retrofitexample" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UserActivity"
            android:label="@string/app_name"
            android:parentActivityName=".SelectUserActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SelectUserActivity" />
        </activity>

        <activity
            android:name=".RepositoriesActivity"
            android:label="@string/title_activity_repositories"
            android:parentActivityName=".UserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserActivity" />
        </activity>
        <activity
            android:name=".SelectUserActivity"
            android:label="@string/title_activity_select_user"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
